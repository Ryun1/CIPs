{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cardano.json",
  "title": "Cardano Domain Types",
  "definitions": {
    "BigInt": {
      "title": "BigInt",
      "type": "string",
      "description": "A long integer domain type",
      "pattern": "^-?(0|[1-9][0-9]*)$",
      "examples": [
        "0",
        "-123",
        "123"
      ]
    },
    "BigNum": {
      "type": "string",
      "pattern": "^-?(0|[1-9][0-9]*)$",
      "format": "uint64"
    },
    "Int": {
      "type": "string",
      "pattern": "^-?(0|[1-9][0-9]*)$",
      "format": "int128"
    },
    "UInt": {
      "type": "integer",
      "pattern": "^(0|[1-9][0-9]*)$",
      "minimum": 0,
      "maximum": 4294967295
    }
  }
}
